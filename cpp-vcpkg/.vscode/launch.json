{
	// IntelliSense を使用して利用可能な属性を学べます。
	// 既存の属性の説明をホバーして表示します。
	// 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			// For Linux.
			"name": "C++ Launch(Linux)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/cpp-vcpkg",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/build",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "gdb の再フォーマットを有効にする",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Ninja - Debug",
			"miDebuggerPath": "/usr/bin/gdb"
		},
		{
			// For Windows.
			"name": "C++ Launch (Windows)",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceRoot}/build/Debug/cpp-vcpkg.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/build",
			"environment": [],
			"externalConsole": false,
			"preLaunchTask": "Ninja - Debug"
		}
	]
}